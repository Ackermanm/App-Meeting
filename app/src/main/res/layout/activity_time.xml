<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity">

    <CalendarView
        android:id="@+id/calendarTime"
        android:layout_width="370dp"
        android:layout_height="301dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearChosenDate"
        android:layout_width="222dp"
        android:layout_height="210dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarTime">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearChosenDateDelete"
        android:layout_width="104dp"
        android:layout_height="210dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearChosenDate"
        app:layout_constraintStart_toEndOf="@+id/linearChosenDate"
        app:layout_constraintTop_toTopOf="@+id/linearChosenDate"></LinearLayout>

    <Button
        android:id="@+id/buttonCancelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:onClick="CancelTimeClicked"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearChosenDate" />

    <Button
        android:id="@+id/buttonDoneTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:onClick="DoneTimeClicked"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearChosenDateDelete" />

</androidx.constraintlayout.widget.ConstraintLayout>